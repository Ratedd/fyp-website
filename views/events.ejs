<!DOCTYPE html>
<html>
	<head>
		<% include partials/scripts %>
		<title>DMIT Alumni</title>
	</head>
	<body class="bg-dark">
		<div class="container-fluid">
			<nav class="navbar navbar-expand-lg navbar-dark">
				<a class="navbar-brand" href="/">DMIT Alumni</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
						</li>
						<% 
							if (!user) { 
						%>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Account
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="/login">Login</a>
								<a class="dropdown-item" href="/register">Register</a>
							</div>
						</li>
						<% 
							}
						%>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Events
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="/workshops">Workshops</a>
								<a class="dropdown-item" href="/events">Upcoming Events</a>
							</div>
						</li>
						<%
							if (user && user.isAdmin) {
						%>
						<li class="nav-item">
							<a class="nav-link" href="/admin">Administrative Panel</a>
						</li>
						<%
							}
						%>
						<%
							if (user) {
						%>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<%=user.name%>
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="/logout">Logout</a>
							</div>
						</li>
						<%
							}
						%>
					</ul>
				</div>
			</nav>
		</div>
		<div class="container py-3 text-center">
			<div class="row">
				<div class="col-md-12">
					<div class="row justify-content-center">
						<div class="col-md-6">
							<div class="card card-outline-secondary">
						  		<div class="card-header bg-dark">
									<h3 class="mb-0 text-white">Login</h3>
						  		</div>
						  		<div class="card-body">
								<table class="table-responsive">
									<thead>
										<tr>
											<th scope="col">Event Name</th>
											<th scope="col">Preview</th>
											<th scope="col">Description</th>
											<th scope="col">Event Date</th>
											<th scope="col">Registration</th>
										</tr>
									</thead>
									<tbody>
										<%
											if (events && events.length) {
												events.forEach(function(e) {
										%>
													<tr>
													<th scope="row"><%= e.eventName %></th>
													<td><img class="img-fluid img-thumbnail" src="<%= e.eventThumbnail %>"></img></td>
													<td><%= e.description %></td>
													<td><%= e.eventDate %></td>
													<td><a href="/event/<%= e.uuid %>">Registration</a></td>
													</tr>
										<%
												})
											}
										%>
									</tbody>
								</table>
						  		</div>
							</div>
					  	</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>